# .env.example

# Telegram Bot Token (для обратной совместимости)
BOT_TOKEN=your_telegram_bot_token

# Rospatent API JWT
ROSPATENT_JWT=your_rospatent_api_jwt

# GigaChat API credentials
GIGACHAT_CLIENT_ID=your_gigachat_client_id
GIGACHAT_CLIENT_SECRET=your_gigachat_client_secret
GIGACHAT_API_KEY=your_gigachat_api_key

# Web service settings
WEB_HOST=0.0.0.0
WEB_PORT=8000
DEBUG=false

# API URLs (optional, defaults provided)
ROSPATENT_BASE_URL=https://searchplatform.rospatent.gov.ru
GIGACHAT_BASE_URL=https://gigachat.devices.sberbank.ru/api/v1

# Log level
LOG_LEVEL=INFO

# Cache settings
CACHE_TTL_HOURS=24
